
#PATH = ":/bin:/usr/bin:/usr/local/bin:/home/racereplay/bin:"
#
#DATABASE = "racetest"
#DBUSER = "racetest"
#DBPASSWORD = "aa.bb.cc"

DIR=$(shell expr $$(pwd) : "/home/\([^/]*\)")
PATH = ":/bin:/usr/bin:/usr/local/bin:/home/${DIR}/bin:"

DATABASE = "${DIR}"
DBUSER = "${DIR}"
DBPASSWORD = "aa.bb.cc"




CSV = $(wildcard *.csv)
FILES = $(subst .csv,,${CSV})

LAPD = $(subst .csv,.lap,$(filter lapd-%,${CSV}))

%.lap: %.csv
	touch $@
	lapimport $< > $@ 2>&1 

.PHONY : all usage lapd tables test clean

all: lapd

usage:
	@echo "make lapd | test"
	@echo

lapd: ${LAPD}

test:
	@echo PATH: ${PATH}
	@echo CSV: ${CSV}
	@echo FILES: ${FILES}
	@echo LAPD: ${LAPD}


clean:
	-rm -f *.tab *.lap



